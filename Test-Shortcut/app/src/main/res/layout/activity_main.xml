<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.bowserf.testshortcut.MainActivity">

    <Button
        android:id="@+id/btn_add_shortcuts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add dynamic shortcuts"
        app:layout_constraintBottom_toTopOf="@+id/btn_remove_shortcuts"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/btn_remove_shortcuts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove shortcuts"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_pinned_shortcuts"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_shortcuts"/>

    <Button
        android:id="@+id/btn_add_pinned_shortcuts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add pinned shortcuts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_remove_shortcuts"/>

</android.support.constraint.ConstraintLayout>

